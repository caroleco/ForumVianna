@using ForumVianna.Site.Utils

@model IEnumerable<ForumVianna.Model.DB.Model.Discussao>

@{
    ViewBag.Title = "Discussoes";
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>

<h2>Discussoes</h2>
@if (LoginUtils.Instance.Usuario != null) {
    <p>
        <button style="width:150px;" type="button" class="btn-block btn btn-primary">Adicionar Discussão</button>
    </p>
}

    <div class="modal fade" id="modalTop" role="dialog"
         data-url="@Url.Action("AddDiscussao","Home")>

    </div>
 

<table class="table">
    <tr>
        <th>
            Tópico
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Criacao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ativo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Situacao)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Topico.Titulo)
            </td>
            <td>
                @Html.ActionLink(item.Titulo, "Comentarios", new { id = item.Id })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Criacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ativo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Situacao)
            </td>
            @if (LoginUtils.Instance.Usuario != null && LoginUtils.Instance.Usuario.Id == item.Dono.Id && item.Situacao == "Aberta")
            {
                <td>


                    @Html.ActionLink("Edit", "EditarDiscussao", new { id = item.Id })

                    @Html.ActionLink("Delete", "DeletarDiscussao", new { id = item.Id })


                </td>
            }
        </tr>
    }

</table>

<script>
    $(document).ready(function () {
        $(".btn-block").click(function () {
            var url = $("#modalTop").data("url");
            $.get(url, function (data) {
                $("#modalTop").html(data);
                $("#modalTop").modal("show");
            });
        })

    })
</script>
